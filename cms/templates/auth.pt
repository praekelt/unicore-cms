<div xmlns:metal="http://xml.zope.org/namespaces/metal"
     metal:define-macro="auth" tal:omit-tag="">
    <div id="auth-container" tal:define="user view.request.user" tal:switch="bool(user)">

        <div tal:case="True" tal:omit-tag="">
            <span i18n:translate="" class="align-right">You are signed in as <span tal:replace="user.get('username')" i18n:name="username" />.</span>
            <a href="" i18n:translate="" class="align-right">Sign Out</a>
        </div>

        <div tal:case="False" tal:omit-tag="">
            <a href="${request.route_url('redirect_to_login')}" i18n:translate="" class="align-right">Sign In</a>
        </div>

    </div>
</div>
