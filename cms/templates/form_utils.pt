<ul xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:define-macro="errors"
    class="error-list"
    tal:condition="error">
    <li class="error" tal:repeat="msg error.messages()" i18n:translate="">${msg}</li>
</ul>

<div xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:define-macro="field"
    tal:switch="field.widget.hidden"
    tal:omit-tag="">
    <div tal:case="True" tal:omit-tag="">${structure:field.render()}</div>
    <div tal:case="False" class="field">
        <label i18n:translate="">${field.title}</label>
        ${structure:field.render()}
        <div tal:define="error field.error" metal:use-macro="view.form_utils['errors']"></div>
    </div>
</div>
