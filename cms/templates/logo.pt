<div xmlns:metal="http://xml.zope.org/namespaces/metal"
     metal:define-macro="logo">
    <?python
        try:
            default_image_src
        except NameError:
            default_image_src = None
    ?>
    <div id="logo-container" tal:define="attribs view.get_logo_attributes(default_image_src)" tal:condition="attribs['src']">
        <a href="/">
            <img tal:attributes="attribs" border="0"/>
        </a>
    </div>
</div>